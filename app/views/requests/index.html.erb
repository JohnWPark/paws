<div class="jumbotron">
  <div class="jumbotron-pic">
    <div class="jumbo-text">
      <h1>Home away from home</h1>
      <h2>We love your pets as much as you do</h2>
    </div>
  </div>
</div>

<div class="center">
  <!-- Only a signed in user will be able to see the New Request link -->
  <% if user_signed_in? %>
    <button type="button" class="btn btn-default"><%= link_to 'New Request', new_request_path, class: "btn btn-link" %></button>
  <% end %>
  <div class="row">
    <% @requests.each do |request| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <!-- Makes the image a link to the show page -->
          <%= link_to image_tag(request.image.url), request %>
            <div class="caption">
              <h3><%= request.pet_name %></h3>
              <p><%= number_to_currency(request.price) %></p>
              <p><%= "Owner: #{request.user.name}" %></p>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

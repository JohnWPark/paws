<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Name</th>
    <th class="center">Description</th>
    <th class="center">Price</th>
    <th class="center">Action</th>
  </tr>

  <% @requests.each do |request| %>

  <tr>
    <td><%= image_tag request.image.url (:thumb) %></td>
    <td><%= request.pet_name %></td>
    <td><%= request.description %></td>
    <td><%= number_to_currency(request.price) %></td>
    <td>
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Action <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "View", request, class: "btn btn-link" %></li>
          <li><%= link_to "Edit", edit_request_path(request), class: "btn btn-link" %></li>
          <li><%= link_to "Destroy", request, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-link" %></li>
        </ul>
      </div>
    </td>
  </tr>
<% end %>

</table>

<br>

<% if user_signed_in? %>

  <%= link_to "New Request", new_request_path, class: "btn btn-link" %>
<% end %>
